<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.purplebox.fragments.shopping.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_productPreviewFragment"
            app:destination="@id/productPreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.purplebox.fragments.shopping.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.purplebox.fragments.shopping.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.purplebox.fragments.shopping.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/productPreviewFragment"
        android:name="com.example.purplebox.fragments.shopping.ProductPreviewFragment"
        android:label="fragment_product_preview"
        tools:layout="@layout/fragment_product_preview">
        <argument
            android:name="product"
            app:argType="com.example.purplebox.model.Product" />


    </fragment>
</navigation>